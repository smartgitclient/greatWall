Source: "{#BuildPath}\nw.pak"; DestDir: "{app}"; Flags: ignoreversion
Source: "{#ResPath}\MSJH.TTC"; DestDir: "{fonts}"; FontInstall: "Microsoft JhengHei UI"; Flags: onlyifdoesntexist uninsneveruninstall
Source: "{#ResPath}\MSJHBD.TTC"; DestDir: "{fonts}"; FontInstall: "Microsoft JhengHei UI Bold"; Flags: onlyifdoesntexist uninsneveruninstall
Source: "{#ResPath}\MSYH.TTC"; DestDir: "{fonts}"; FontInstall: "Microsoft YaHei UI"; Flags: onlyifdoesntexist uninsneveruninstall
Source: "{#ResPath}\MSYHBD.TTC"; DestDir: "{fonts}"; FontInstall: "Microsoft YaHei UI Bold"; Flags: onlyifdoesntexist uninsneveruninstall
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[Icons]
