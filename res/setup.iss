#define MyAppName "Megstar Treasury Management System"
#define MyShortcut "Treasury System"
#define MyAppVersion "1.0.3.0"
#define MyAppPublisher "Smartsoft, Inc."
#define MyAppCopyright "Copyright (C) 2014 Smartsoft, Inc."
#define MyAppURL "http://www.smartsoft-tech.com/"
#define MyAppExeName "client.exe"
#define ResPath "E:\docs\GDrive\Projects\SmartSoft\Rolling\source\frontend\res"
