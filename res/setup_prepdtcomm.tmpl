#define MyAppName "Megstar Treasury Management System PREPDT"
#define MyShortcut "Treasury System PREPDT"
#define MyAppVersion "1.0.3.1"
#define MyAppPublisher "Smartsoft, Inc."
#define MyAppCopyright "Copyright (C) 2014 Smartsoft, Inc."
#define MyAppURL "http://www.smartsoft-tech.com/"
#define MyAppExeName "client.exe"
#define ResPath "$resPath$"
#define BuildPath "$buildPath$"
#define BuildEnv "$buildEnv$"

[Setup]
; NOTE: The value of AppId uniquely identifies this application.
; Do not use the same AppId value in installers for other applications.
; (To generate a new GUID, click Tools | Generate GUID inside the IDE.)
AppId={{ef77cde2-2072-11e5-b5f7-727283247c7f}
AppName={#MyAppName}
AppVersion={#MyAppVersion}
;AppVerName={#MyAppName} {#MyAppVersion}
AppPublisher={#MyAppPublisher}
AppPublisherURL={#MyAppURL}
AppSupportURL={#MyAppURL}
AppUpdatesURL={#MyAppURL}
AppCopyright={#MyAppCopyright}
VersionInfoVersion={#MyAppVersion}
DefaultDirName={pf}\Smartsoft/Megstar Treasury Management System
DefaultGroupName=Smartsoft
DisableProgramGroupPage=yes
OutputBaseFilename=megstar_{#BuildEnv}_{#MyAppVersion}
OutputDir={#BuildPath}\release
SetupIconFile={#ResPath}\icon\Meg_Star_icon_256_16.ico
Compression=lzma
SolidCompression=yes



[Tasks]
Name: "desktopicon"; Description: "{cm:CreateDesktopIcon}"; GroupDescription: "{cm:AdditionalIcons}";

[Files]
Source: "{#ResPath}\clearIconCache.bat"; DestDir: "{win}"; Flags: ignoreversion
Source: "{#BuildPath}\win64\client.exe"; DestDir: "{app}"; DestName: "client.exe"; Flags: ignoreversion; Check: IsWin64
Source: "{#BuildPath}\win32\client.exe"; DestDir: "{app}"; DestName: "client.exe"; Flags: ignoreversion; Check: "not IsWin64"
Source: "{#BuildPath}\win64\ffmpegsumo.dll"; DestDir: "{app}"; Flags: ignoreversion; Check: IsWin64
Source: "{#BuildPath}\win32\ffmpegsumo.dll"; DestDir: "{app}"; Flags: ignoreversion; Check: "not IsWin64"
Source: "{#BuildPath}\win64\icudtl.dat"; DestDir: "{app}"; Flags: ignoreversion; Check: IsWin64
Source: "{#BuildPath}\win32\icudtl.dat"; DestDir: "{app}"; Flags: ignoreversion; Check: "not IsWin64"
Source: "{#BuildPath}\win64\libEGL.dll"; DestDir: "{app}"; Flags: ignoreversion; Check: IsWin64
Source: "{#BuildPath}\win32\libEGL.dll"; DestDir: "{app}"; Flags: ignoreversion; Check: "not IsWin64"
Source: "{#BuildPath}\win64\libGLESv2.dll"; DestDir: "{app}"; Flags: ignoreversion; Check: IsWin64
Source: "{#BuildPath}\win32\libGLESv2.dll"; DestDir: "{app}"; Flags: ignoreversion;  Check: "not IsWin64"
Source: "{#BuildPath}\win64\pdf.dll"; DestDir: "{app}"; Flags: ignoreversion; Check: IsWin64
Source: "{#BuildPath}\win32\pdf.dll"; DestDir: "{app}"; Flags: ignoreversion;  Check: "not IsWin64"
Source: "{#BuildPath}\win64\nw.pak"; DestDir: "{app}"; Flags: ignoreversion; Check: IsWin64
Source: "{#BuildPath}\win32\nw.pak"; DestDir: "{app}"; Flags: ignoreversion; Check: "not IsWin64"
Source: "{#ResPath}\MSJH.TTC"; DestDir: "{fonts}"; FontInstall: "Microsoft JhengHei UI"; Flags: onlyifdoesntexist uninsneveruninstall
Source: "{#ResPath}\MSJHBD.TTC"; DestDir: "{fonts}"; FontInstall: "Microsoft JhengHei UI Bold"; Flags: onlyifdoesntexist uninsneveruninstall
Source: "{#ResPath}\MSYH.TTC"; DestDir: "{fonts}"; FontInstall: "Microsoft YaHei UI"; Flags: onlyifdoesntexist uninsneveruninstall
Source: "{#ResPath}\MSYHBD.TTC"; DestDir: "{fonts}"; FontInstall: "Microsoft YaHei UI Bold"; Flags: onlyifdoesntexist uninsneveruninstall
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[Icons]
Name: "{group}\{#MyAppName}"; Filename: "{app}\{#MyAppExeName}"
Name: "{commondesktop}\{#MyShortcut}"; Filename: "{app}\{#MyAppExeName}"; Parameters: "--disable-direct-write"; Tasks: desktopicon; IconFilename: {#ResPath}\icon\Meg_Star_icon_256_16.ico;
Name: "{group}\{cm:UninstallProgram,{#MyAppName}}"; Filename: "{uninstallexe}"

[Run]
Filename: "{app}\{#MyAppExeName}"; Description: "{cm:LaunchProgram,{#StringChange(MyAppName, '&', '&&')}}"; Flags: nowait postinstall skipifsilent
