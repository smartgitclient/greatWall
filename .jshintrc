{
  "node": true,
  "browser": true,
  "esnext": true,
  "bitwise": true,
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "quotmark": false,
  "regexp": true,
  "undef": true,
  "unused": false, //允许声明的变量未使用
  "strict": true,
  "trailing": true,
  "smarttabs": true,
  "boss":true,//如果为真，那么JSHint会允许在if，for，while里面编写赋值语句。
  "jquery":true,//This option defines globals exposed by the jQuery JavaScript library.
  "globals": {
    "angular": true
  }
}
